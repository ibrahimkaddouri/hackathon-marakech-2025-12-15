# HRFlow.ai Configuration (REQUIRED)
# Get these from https://developers.hrflow.ai
HRFLOW_API_KEY=your_hrflow_api_key
HRFLOW_USER_EMAIL=your_email@example.com
HRFLOW_SOURCE_KEY=your_source_key      # Source to store parsed profiles
HRFLOW_BOARD_KEY=your_board_key        # Board containing job postings
HRFLOW_AGENT_KEY=your_agent_key        # Scoring agent/algorithm key

# Anthropic API Key (REQUIRED for email generation and chat)
# Get from https://console.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_api_key

# HeyGen API Key (optional - for AI video generation)
HEYGEN_API_KEY=
